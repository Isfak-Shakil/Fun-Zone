<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/bg"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_weight="2"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <TextView
        android:textColor="@android:color/white"
        android:textSize="@dimen/_40sdp"
        android:fontFamily="sans-serif-black"
        android:text="Fun Zone"
        android:layout_centerVertical="true"
        android:gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
<GridLayout
    android:alignmentMode="alignMargins"
    android:columnOrderPreserved="false"
    android:rowCount="3"
    android:columnCount="2"
    android:padding="@dimen/_14sdp"
    android:layout_weight="8"
    android:layout_width="match_parent"
    android:layout_height="0dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_1_Id"
        android:clickable="true"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        >
        <LinearLayout
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="@dimen/_16sdp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/currency_icon"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_60sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:text="Currency Convertion"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_2_Id"
        android:clickable="true"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        >
        <LinearLayout
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="@dimen/_16sdp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/age_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Age Calculator"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_5_Id"
        android:clickable="true"
        app:cardElevation="@dimen/_8sdp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:layout_marginRight="@dimen/_16sdp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        >
        <LinearLayout
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="@dimen/_16sdp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/tic_tac_toe_icon"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_60sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tic Tac Toe"
                android:layout_marginTop="@dimen/_5sdp"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_6_Id"
        android:clickable="true"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        >
        <LinearLayout
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/guessing_game"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Guessing Number"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</GridLayout>
</LinearLayout>